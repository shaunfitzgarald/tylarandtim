rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /site_content/{document=**} {
      allow read: if true;
    }
    match /photos/{document=**} {
      allow read: if true;
    }
    match /rsvps/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
